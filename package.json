    "routing-controllers": "^0.7.6",
    "shortid": "^2.2.8",
    "swagger2-koa": "^0.0.43",
    "typemoq": "^2.1.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/jasmine": "^2.8.6",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa": "^2.0.44",
    "@types/nconf": "^0.0.37",
    "@types/node": "^9.4.7",
    "@types/shortid": "^0.0.29",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "ts-node": "^5.0.1"
  }
