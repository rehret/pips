{
  "name": "pips",
  "version": "2.0.0",
  "description": "Pips are dots indicating a unit of numerical value on dice or dominoes",
  "main": "build/index.js",
  "engines": {
    "node": "^8.0.0 || ^9.0.0"
  },
  "repository": "git@github.com:rehret/pips.git",
  "author": "Randy Ehret <randyehret@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "develop": "ts-node src/index.ts | bunyan",
    "start": "node build/src/index.js | bunyan",
    "lint": "tslint src/**/*.ts spec/**/*.ts",
    "prebuild": "yarn lint",
    "build": "tsc",
    "postbuild": "n-copy -s src/modules/global/components/config -d build/src/modules/global/components/config \"**/*.json\" && n-copy -s spec -d build/spec \"**/*.json\"",
    "clean": "n-clean build",
    "pretest": "yarn build",
    "test": "yarn test:no-build",
    "test:no-build": "mocha -r reflect-metadata build/spec/**/*.js",
    "test:watch": "mocha -r ts-node/register -r reflect-metadata --watch --watch-extensions ts spec/**/*.ts",
    "test:coverage": "nyc mocha spec/**/*.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/swagger": "^2.0.2",
    "@nestjs/testing": "^5.0.1",
    "@nestjs/websockets": "^5.0.1",
    "bunyan": "^1.8.12",
    "nconf": "^0.10.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.0",
    "@types/nconf": "^0.0.37",
    "@types/node": "^10.3.0",
    "@types/shortid": "^0.0.29",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.1",
    "jasmine-spec-reporter": "^4.2.1",
    "mocha": "^5.2.0",
    "npm-build-tools": "^2.2.5",
    "nyc": "^12.0.1",
    "sinon": "^5.0.10",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typemoq": "^2.1.0",
    "typescript": "^2.9.1"
  }
}
