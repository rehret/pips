{
  "name": "pips",
  "version": "1.0.0",
  "description": "Pips are dots indicating a unit of numerical value on dice or dominoes",
  "main": "build/index.js",
  "engines": {
    "node": "^8.0.0 || ^9.0.0"
  },
  "repository": "git@github.com:rehret/pips.git",
  "author": "Randy Ehret <randyehret@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "develop": "ts-node src/index.ts | bunyan",
    "start": "node build/src/index.js | bunyan",
    "lint": "tslint src/**/*.ts spec/**/*.ts",
    "prebuild": "yarn lint",
    "build": "tsc",
    "postbuild": "n-copy -s src/config -d build/src/config \"**/*.json\" && n-copy -s . -d build \"openapi.json\" && n-copy -s spec -d build/spec \"**/*.json\"",
    "clean": "n-clean build",
    "pretest": "yarn build",
    "test": "yarn test:no-build",
    "test:no-build": "mocha -r reflect-metadata build/spec/**/*.js",
    "test:watch": "mocha -r ts-node/register -r reflect-metadata --watch --watch-extensions ts spec/**/*.ts",
    "test:coverage": "nyc mocha spec/**/*.ts"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "inversify": "^4.11.1",
    "inversify-logger-middleware": "^3.1.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "nconf": "^0.10.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.6",
    "shortid": "^2.2.8",
    "swagger2-koa": "^0.0.44"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.27",
    "@types/mocha": "^2.2.48",
    "@types/nconf": "^0.0.37",
    "@types/node": "^9.4.6",
    "@types/shortid": "^0.0.29",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "jasmine-spec-reporter": "^4.2.1",
    "mocha": "^5.0.5",
    "npm-build-tools": "^2.2.5",
    "nyc": "^11.6.0",
    "sinon": "^4.4.8",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^2.7.2"
  }
}
